<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="environmentMonitoring.Views.SensorListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:environmentMonitoring.ViewModels"
    xmlns:models="clr-namespace:environmentMonitoring.ViewModels"
    x:DataType="vm:SensorListViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back" Command="{Binding BackCommand}"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout x:Name="Body">
        <Label 
            Text="Sensors"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>