<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="environmentMonitoring.Views.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to the Home Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="AdminPanelButton"
            Text="Admin Panel"
            Command="{Binding NavigateToAdminPanelCommand}"
            BackgroundColor="#FF10B7D4"
            TextColor="White" 
            HeightRequest="40"
            Margin="20,20,20,0" />

        <Button x:Name="AccountButton"
            Text="Account"
            Command="{Binding NavigateToAccountPageCommand}"
            BackgroundColor="#FF10B7D4"
            TextColor="White" 
            HeightRequest="40"
            Margin="20,20,20,0" />

        <Button x:Name="SensorButton"
            Text="Sensor"
            Command="{Binding NavigateToSensorPageCommand}"
            BackgroundColor="#FF10B7D4"
            TextColor="White" 
            HeightRequest="40"
            Margin="20,20,20,0" />

        <Button x:Name="SensorListButton"
            Text="Sensor List"
            Command="{Binding NavigateToSensorListPageCommand}"
            BackgroundColor="#FF10B7D4"
            TextColor="White" 
            HeightRequest="40"
            Margin="20,20,20,0" />

        <Button x:Name="IncidentReportListButton"
            Text="Incident Reports"
            Command="{Binding NavigateToIncidentReportListPageCommand}"
            BackgroundColor="#FF10B7D4"
            TextColor="White" 
            HeightRequest="40"
            Margin="20,20,20,0" />
    </VerticalStackLayout>
</ContentPage>