<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="environmentMonitoring.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:environmentMonitoring.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="environmentMonitoring">

    

    <ShellContent
        Title="Admin panel"
        ContentTemplate="{DataTemplate views:AdminPanelPage}"
        Route="AdminPanelPage" />

    <ShellContent
        Title="Log In"
        ContentTemplate="{DataTemplate views:LogInPage}"
        Route="LogInPage" />

    <ShellContent
        Title="Manage Roles"
        ContentTemplate="{DataTemplate views:ManageRolesPage}"
        Route="ManageRolesPage" />

    <ShellContent
        Title="Manage Roles Permissions"
        ContentTemplate="{DataTemplate views:ManageRolePermissionsPage}"
        Route="ManageRolePermissionsPage" />

    <ShellContent
        Title="Role"
        ContentTemplate="{DataTemplate views:RolePage}"
        Route="RolePage" />
        
        
    
    <TabBar>
        <Tab>
            <ShellContent
            Title="Home Page"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />
        </Tab>
        
    </TabBar>

</Shell>

