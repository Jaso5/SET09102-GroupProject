<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="environmentMonitoring.SensorConfigPage"
             Title="Sensor Configuration">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Sensor Configuration" 
                   FontSize="24" 
                   HorizontalOptions="Center" />

            <Entry x:Name="SensorIdEntry" 
                   Placeholder="Sensor ID" />

            <Entry x:Name="LocationEntry" 
                   Placeholder="Location" />

            <Entry x:Name="ModelEntry" 
                   Placeholder="Model" />

            <Entry x:Name="BrandEntry" 
                   Placeholder="Brand" />

            <Entry x:Name="FunctionalityEntry" 
                   Placeholder="Functionality" />

            <DatePicker x:Name="LastMaintainedDatePicker" />

            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Button Text="Save" 
                        Grid.Column="0"
                        Clicked="OnSaveConfigurationClicked"/>
                <Button Text="Update" 
                        Grid.Column="1"
                        Clicked="OnUpdateConfigurationClicked"/>
                <Button Text="Delete"
                        Grid.Column="2"
                        Clicked="OnDeleteConfigurationClicked"/>
            </Grid>

            <CollectionView x:Name="SensorsCollection"
                          SelectionMode="Single"
                          SelectionChanged="OnSensorSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10">
                            <Grid ColumnDefinitions="*,*,*">
                                <Label Text="{Binding SensorId}" Grid.Column="0"/>
                                <Label Text="{Binding Location}" Grid.Column="1"/>
                                <Label Text="{Binding Functionality}" Grid.Column="2"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>